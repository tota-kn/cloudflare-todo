meta {
  name: todos-update
  type: http
  seq: 1
}

put {
  url: {{BASE_URL}}/v1/todos/test-put-success-001
  body: json
  auth: none
}

body:json {
  {
    "title": "Updated Test Todo",
    "description": "This todo has been updated",
    "completed": true
  }
}

tests {
  test("Response status is 200", function() {
    expect(res.getStatus()).to.equal(200);
  });
  
  test("Response contains updated todo", function() {
    const todo = res.getBody();
    expect(todo).to.have.property('id', 'test-put-success-001');
    expect(todo).to.have.property('title', 'Updated Test Todo');
    expect(todo).to.have.property('description', 'This todo has been updated');
    expect(todo).to.have.property('completed', true);
    expect(todo).to.have.property('created_at');
    expect(todo).to.have.property('updated_at');
  });
}