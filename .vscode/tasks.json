{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "back dev",
      "type": "shell",
      "command": "pnpm",
      "args": [
        "dev"
      ],
      "presentation": {
        "group": "back"
      },
      "options": {
        "cwd": "${workspaceFolder}/back"
      },
    },
    {
      "label": "back unit test",
      "type": "shell",
      "command": "pnpm",
      "args": [
        "test:unit:watch"
      ],
      "presentation": {
        "group": "back"
      },
      "options": {
        "cwd": "${workspaceFolder}/back"
      },
    },
    {
      "label": "back typecheck",
      "type": "shell",
      "command": "pnpm",
      "args": [
        "typecheck:watch"
      ],
      "presentation": {
        "group": "back"
      },
      "options": {
        "cwd": "${workspaceFolder}/back"
      },
    },
    {
      "label": "back all",
      "dependsOrder": "parallel",
      "dependsOn": [
        "back dev",
        "back unit test",
        "back typecheck"
      ],
    },
    {
      "label": "front dev",
      "type": "shell",
      "command": "pnpm",
      "args": [
        "dev"
      ],
      "presentation": {
        "group": "front"
      },
      "options": {
        "cwd": "${workspaceFolder}/front"
      },
    },
    {
      "label": "front typecheck",
      "type": "shell",
      "command": "pnpm",
      "args": [
        "typecheck:watch"
      ],
      "presentation": {
        "group": "front"
      },
      "options": {
        "cwd": "${workspaceFolder}/front"
      },
    },
    {
      "label": "front all",
      "dependsOrder": "parallel",
      "dependsOn": [
        "front dev",
        "front typecheck"
      ],
    },
    {
      "label": "all",
      "dependsOrder": "parallel",
      "dependsOn": [
        "back all",
        "front all"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
    },
  ]
}