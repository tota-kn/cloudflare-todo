{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "back dev",
      "type": "shell",
      "command": "pnpm",
      "args": [
        "dev"
      ],
      "presentation": {
        "group": "dev"
      },
      "options": {
        "cwd": "${workspaceFolder}/back"
      }
    },
    {
      "label": "back unit test",
      "type": "shell",
      "command": "pnpm",
      "args": [
        "test:unit:watch"
      ],
      "presentation": {
        "group": "check"
      },
      "options": {
        "cwd": "${workspaceFolder}/back"
      }
    },
    {
      "label": "back typecheck",
      "type": "shell",
      "command": "pnpm",
      "args": [
        "typecheck:watch"
      ],
      "presentation": {
        "group": "check"
      },
      "options": {
        "cwd": "${workspaceFolder}/back"
      }
    },
    {
      "label": "front dev",
      "type": "shell",
      "command": "pnpm",
      "args": [
        "dev"
      ],
      "presentation": {
        "group": "dev"
      },
      "options": {
        "cwd": "${workspaceFolder}/front"
      }
    },
    {
      "label": "front typecheck",
      "type": "shell",
      "command": "pnpm",
      "args": [
        "typecheck:watch"
      ],
      "presentation": {
        "group": "check"
      },
      "options": {
        "cwd": "${workspaceFolder}/front"
      }
    },
    {
      "label": "dev",
      "dependsOrder": "parallel",
      "dependsOn": [
        "back dev",
        "front dev"
      ],
      "problemMatcher": []
    },
    {
      "label": "check",
      "dependsOrder": "parallel",
      "dependsOn": [
        "back typecheck",
        "back unit test",
        "front typecheck"
      ]
    },
    {
      "label": "all",
      "dependsOrder": "parallel",
      "dependsOn": [
        "dev",
        "check"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}