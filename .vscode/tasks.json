{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Backend Dev Server",
      "type": "shell",
      "command": "pnpm",
      "args": [
        "-F",
        "back",
        "dev"
      ],
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "detail": "バックエンド開発サーバーを起動 (localhost:8787)"
    },
    {
      "label": "Frontend Dev Server",
      "type": "shell",
      "command": "pnpm",
      "args": [
        "-F",
        "front",
        "dev"
      ],
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "detail": "フロントエンド開発サーバーを起動 (localhost:5173)"
    },
    {
      "label": "Start All Dev Servers",
      "dependsOrder": "parallel",
      "dependsOn": [
        "Backend Dev Server",
        "Frontend Dev Server"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "フロントエンドとバックエンドの両方の開発サーバーを並行起動"
    },
  ]
}