meta {
  name: files-list
  type: http
  seq: 1
}

get {
  url: {{BASE_URL}}/v1/files
  body: none
  auth: none
}

tests {
  test("Response status is 200", function() {
    expect(res.getStatus()).to.equal(200);
  });
  
  test("Response contains files array", function() {
    expect(res.getBody()).to.have.property('files');
    expect(res.getBody().files).to.be.an('array');
  });
  
  test("Files have required properties", function() {
    const files = res.getBody().files;
    if (files.length > 0) {
      expect(files[0]).to.have.property('key');
      expect(files[0]).to.have.property('size');
      expect(files[0]).to.have.property('uploaded');
      expect(files[0]).to.have.property('etag');
    }
  });
}