meta {
  name: files-get
  type: http
  seq: 3
}

get {
  url: {{BASE_URL}}/r2/files/test-file.txt
  body: none
  auth: none
}

tests {
  test("Response status is 200 or 404", function() {
    expect([200, 404]).to.include(res.getStatus());
  });
  
  test("If found, response contains file content", function() {
    if (res.getStatus() === 200) {
      expect(res.getBody()).to.not.be.null;
    }
  });
  
  test("If not found, response contains error", function() {
    if (res.getStatus() === 404) {
      expect(res.getBody()).to.have.property('error', 'File not found');
    }
  });
}