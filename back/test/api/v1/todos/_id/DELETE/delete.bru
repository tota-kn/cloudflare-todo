meta {
  name: todos-delete
  type: http
  seq: 1
}

delete {
  url: {{BASE_URL}}/v1/todos/1
  body: none
  auth: none
}

tests {
  test("Response status is 200 or 404", function() {
    expect([200, 404]).to.include(res.getStatus());
  });
  
  test("If found, response contains success message", function() {
    if (res.getStatus() === 200) {
      expect(res.getBody()).to.have.property('message');
      expect(res.getBody().message).to.include('deleted successfully');
    }
  });
  
  test("If not found, response contains error", function() {
    if (res.getStatus() === 404) {
      expect(res.getBody()).to.have.property('error', 'Todo not found');
    }
  });
}