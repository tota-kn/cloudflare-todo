meta {
  name: todos-get
  type: http
  seq: 1
}

get {
  url: {{BASE_URL}}/v1/todos/test-get-success-001
  body: none
  auth: none
}

tests {
  test("Response status is 200", function() {
    expect(res.getStatus()).to.equal(200);
  });
  
  test("Response contains expected todo", function() {
    const todo = res.getBody();
    expect(todo).to.have.property('id', 'test-get-success-001');
    expect(todo).to.have.property('title', 'Test Todo for GET Success');
    expect(todo).to.have.property('description', 'Description for GET success test');
    expect(todo).to.have.property('completed', false);
    expect(todo).to.have.property('created_at');
    expect(todo).to.have.property('updated_at');
  });
}