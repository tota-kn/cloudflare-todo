{
  "name": "back",
  "private": true,
  "scripts": {
    "lint": "eslint . --fix",
    "cf-typegen": "wrangler types -e local --env-interface CloudflareEnv ./src/types/env.d.ts",
    "dev": "pnpm db:migrate && wrangler dev -e local",
    "deploy:dev": "wrangler deploy --minify -e dev",
    "deploy:prd": "wrangler deploy --minify -e prd",
    "typecheck": "pnpm run cf-typegen && rm -rf ./dist/types && tsc --declaration --emitDeclarationOnly --declarationDir ./dist/types",
    "test:unit": "vitest --coverage",
    "test:api": "pnpm bucket:reset && pnpm db:reset && cd test/api && bru run --env local",
    "db:migrate": "wrangler d1 migrations apply todo-app-db-local --local -e local",
    "db:reset": "wrangler d1 execute todo-app-db-local --local -e local --file ./migrations/0002_reset_and_seed_test_data.sql",
    "bucket:reset": "cd buckets && ./init.sh"
  },
  "dependencies": {
    "@hono/swagger-ui": "^0.5.0",
    "@hono/zod-openapi": "^0.19.0",
    "@hono/zod-validator": "^0.4.3",
    "drizzle-orm": "^0.44.2",
    "hono": "^4.7.2",
    "uuid": "^11.1.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250705.0",
    "@eslint/compat": "^1.3.1",
    "@eslint/js": "^9.21.0",
    "@stylistic/eslint-plugin": "^4.1.0",
    "@types/node": "^20",
    "@types/uuid": "^10.0.0",
    "@usebruno/cli": "^2.7.0",
    "@vitest/coverage-v8": "^2.1.8",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-boundaries": "^5.0.1",
    "eslint-plugin-import": "^2.32.0",
    "typescript": "^5",
    "typescript-eslint": "^8.25.0",
    "vitest": "^2.1.8",
    "wrangler": "^4.23.0"
  }
}