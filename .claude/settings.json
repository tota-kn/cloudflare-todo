{
  "permissions": {
    "allow": [
      "Bash(find:*)",
      "Bash(mkdir:*)",
      "Bash(cp:*)",
      "Bash(curl:*)",
      "Bash(rm:*)",
      "Bash(mv:*)",
      "Bash(pnpm:*)",
      "mcp__serena",
      "mcp__cloudflare-docs",
      "mcp__context7",
      "WebSearch",
      "WebFetch"
    ],
    "ask": [],
    "deny": [
      "Bash(git reset:*)",
      "Bash(git rebase:*)",
      "Bash(git push:*)",
      "Bash(git branch -D:*)",
      "Bash(git clean:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(sudo:*)",
      "Bash(wrangler:*)",
      "Bash(pnpx:*)",
      "Bash(pnpm exec:*)",
      "Read(.env.*)"
    ]
  },
  "enabledMcpjsonServers": [
    "playwright",
    "cloudflare-observability",
    "cloudflare-docs",
    "serena",
    "context7"
  ],
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo '✅ 作業完了 - 確認をお願いします'"
          }
        ]
      }
    ]
  }
}