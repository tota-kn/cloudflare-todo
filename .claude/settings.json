{
  "permissions": {
    "allow": [
      "Bash(git rm:*)"
    ],
    "deny": [
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git rebase:*)",
      "Bash(rm:*)",
      "Bash(sudo:*)",
      "Read(.env.*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "powershell.exe -command \"Set-ExecutionPolicy -ExecutionPolicy RemoteSigned -Scope Process; New-BurntToastNotification -Text '‚úÖCompleted'\""
          },
          {
            "type": "command",
            "command": "pnpm -r lint"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "powershell.exe -command \"Set-ExecutionPolicy -ExecutionPolicy RemoteSigned -Scope Process; New-BurntToastNotification -Text 'üõëStoped'\""
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "powershell.exe -command \"Set-ExecutionPolicy -ExecutionPolicy RemoteSigned -Scope Process; New-BurntToastNotification -Text '‚ùìAsked'\""
          }
        ]
      }
    ]
  }
}