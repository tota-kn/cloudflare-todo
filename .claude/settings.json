{
  "permissions": {
    "allow": [],
    "deny": [
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git rebase:*)",
      "Bash(rm:*)",
      "Bash(sudo:*)",
      "Read(.env.*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "pnpm back typecheck"
          },
          {
            "type": "command",
            "command": "pnpm back lint"
          }
        ]
      }
    ]
  }
}